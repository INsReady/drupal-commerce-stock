{{ attach_library('commerce_stock/inventory_control') }}

<div class="span10">
    <div class="well">
        <h1>Inventory Control</h1>

        <div class="row-fluid">

            <div class="span4">
                <div class="input-append transfer-barcode">
                    <input class="" id="input-barcode" type="text" placeholder="M1-Red-XL">
                    <button class="btn" type="button" id="button-add-item">Add</button>
                </div>
            </div>

        </div><!-- end row-fluid -->

        <table class="table table-striped table-list table-transfers" id="item-table">
            <thead>
            <tr>
                <th>SKU</th>
                <th>Quantity</th>
                <th>Options</th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>

        <table width="100%" border="0" cellpadding="0" cellspacing="0" class="table table-stock-total">
            <tbody><tr>
                <td>TOTAL</td>
                <td class="table-transfers-total">150</td>
                <td><textarea rows="2" class="span12 transfer-textarea" name="description" id="description" placeholder="Write comment here..."></textarea></td>
            </tr>
            </tbody></table>


        <form class="pull-right" id="form-move-inventory" method="post"></form>

    </div><!--well-->
</div>